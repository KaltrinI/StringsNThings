@model IEnumerable<StringsNThings.Models.Instrument>

@{
    ViewBag.Title = "Index";
}

<h2>Strings'n'Things</h2>
@if (User.IsInRole("Admin"))
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<li class="form-inline" >
    
        
    
    @foreach (var item in Model)
    {
    <div  style="border-style:solid; margin:20px" >

        <ul>
            @Html.DisplayFor(modelItem => item.Name)
        </ul>

        <ul>
            
            <a href="@Url.Action("Details","Instruments", new{ id = item.Id })">
                <img src="@item.Image" style="max-width:200px" />
            </a>
        </ul>
        <ul>
            @if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    }
    @*  @Html.ActionLink("Details", "Details", new { id = item.Id }, new ) *@

        </ul>
    </div> 
    }

</li>
